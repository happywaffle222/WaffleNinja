<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:onClick="back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Easy"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_weight="0.08"
        android:layout_alignBaseline="@+id/mediumButton"
        android:layout_alignBottom="@+id/mediumButton"
        android:onClick="easy"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Hard"
        android:layout_height="wrap_content"
        android:id="@+id/hardButton"
        android:layout_alignBaseline="@+id/mediumButton"
        android:layout_alignBottom="@+id/mediumButton"
        android:layout_alignParentEnd="true"
        android:onClick="hard"
        android:layout_width="125dp" />

    <Button
        android:text="Medium"
        android:layout_height="wrap_content"
        android:id="@+id/mediumButton"
        android:layout_marginTop="64dp"
        android:layout_width="125dp"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true"
        android:onClick="medium"
        />

    <TextView
        android:text="Ninja Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mediumButton"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="39dp"
        android:id="@+id/textView" />

    <Button
        android:text="Red"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/redCostume"
        android:layout_weight="0.08"
        android:onClick="red"
        android:layout_alignBaseline="@+id/pinkCostume"
        android:layout_alignBottom="@+id/pinkCostume"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Blue"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/BlueCostume"
        android:layout_weight="0.08"
        android:onClick="blue"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pink"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/pinkCostume"
        android:layout_weight="0.08"
        android:onClick="pink"
        android:layout_alignBaseline="@+id/BlueCostume"
        android:layout_alignBottom="@+id/BlueCostume"
        android:layout_alignStart="@+id/mediumButton" />

    <TextView
        android:text="Difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:src="@drawable/bluewaffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BlueCostume"
        android:layout_alignEnd="@+id/BlueCostume"
        android:layout_marginEnd="44dp"
        android:id="@+id/imageView2" />

    <ImageView
        android:src="@drawable/redwaffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_below="@+id/redCostume"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp" />

    <ImageView
        android:src="@drawable/purplewaffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/pinkCostume"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:text="Ninja Mode!"
        android:layout_height="wrap_content"
        android:id="@+id/ninjaMode"
        android:onClick="ninja"
        android:layout_width="125dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/redCostume" />
</RelativeLayout>